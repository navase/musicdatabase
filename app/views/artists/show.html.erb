<h1><%= @artist.name %>
<%= link_to "Edit artist", edit_artist_path, class: "btn btn-default" %>
<%= link_to "Delete artist", artist_path, class: "btn btn-default", method: :delete %></h1>


<p><%= image_tag @artist.image.large %></p>
<p><%= @artist.biography %></p>
<p>Genre: <%= @artist.genre %></p>

<h2>Songs</h2>
<% @artist.songs.each do |song| %>
  <p><%= link_to song.title, song %></p>
<% end %>

<%= link_to "Add song", new_song_path, class: "btn btn-default" %>
